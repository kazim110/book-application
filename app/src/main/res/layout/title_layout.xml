        android:layoutDirection="rtl">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="rtl"
            android:textAlignment="center"
            android:text="title will be here"
            android:textSize="@dimen/small_font_size"
            android:textStyle="bold"
            android:textColor="#25615B"
            android:layout_marginBottom="@dimen/margin_size_small"/>
        <TextView
            android:id="@+id/line_below_textview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/standard_margin_size"
            android:layout_marginHorizontal="@dimen/standard_margin_size_x"
            android:background="@android:color/darker_gray"
            />
    </LinearLayout>

